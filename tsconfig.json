{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "lib": ["ES2022"],
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,
    "noUncheckedIndexedAccess": true,
    "exactOptionalPropertyTypes": true,
    "noImplicitReturns": true,
    "noImplicitOverride": true,
    "allowSyntheticDefaultImports": true,
    "verbatimModuleSyntax": true,
    "baseUrl": ".",
    "paths": {
      "@matrix/core": ["packages/core/src"],
      "@matrix/core/*": ["packages/core/src/*"],
      "@matrix/tools": ["packages/tools/src"],
      "@matrix/tools/*": ["packages/tools/src/*"],
      "@matrix/security": ["packages/security/src"],
      "@matrix/security/*": ["packages/security/src/*"],
      "@matrix/models": ["packages/models/src"],
      "@matrix/models/*": ["packages/models/src/*"],
      "@matrix/prompts": ["packages/prompts/src"],
      "@matrix/prompts/*": ["packages/prompts/src/*"],
      "@matrix/context-engine": ["packages/context-engine/src"],
      "@matrix/context-engine/*": ["packages/context-engine/src/*"],
      "@matrix/auth": ["packages/auth/src"],
      "@matrix/auth/*": ["packages/auth/src/*"],
      "@matrix/mcp": ["packages/mcp/src"],
      "@matrix/mcp/*": ["packages/mcp/src/*"],
      "@matrix/tui": ["packages/tui/src"],
      "@matrix/tui/*": ["packages/tui/src/*"],
      "@matrix/cli": ["packages/cli/src"],
      "@matrix/cli/*": ["packages/cli/src/*"]
    }
  },
  "exclude": ["node_modules", "dist", "**/dist/**"]
}
