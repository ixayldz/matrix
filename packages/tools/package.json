{
  "name": "@matrix/tools",
  "version": "0.1.0",
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    },
    "./fs": {
      "types": "./dist/fs/index.d.ts",
      "import": "./dist/fs/index.js"
    },
    "./git": {
      "types": "./dist/git/index.d.ts",
      "import": "./dist/git/index.js"
    },
    "./exec": {
      "types": "./dist/exec/index.d.ts",
      "import": "./dist/exec/index.js"
    },
    "./patch": {
      "types": "./dist/patch/index.d.ts",
      "import": "./dist/patch/index.js"
    },
    "./search": {
      "types": "./dist/search/index.d.ts",
      "import": "./dist/search/index.js"
    },
    "./test": {
      "types": "./dist/test/index.d.ts",
      "import": "./dist/test/index.js"
    }
  },
  "scripts": {
    "build": "tsup src/index.ts --format esm --dts --clean",
    "dev": "tsup src/index.ts --format esm --dts --watch",
    "typecheck": "tsc --noEmit",
    "test": "vitest run",
    "test:watch": "vitest",
    "clean": "rm -rf dist"
  },
  "dependencies": {
    "execa": "^8.0.1",
    "simple-git": "^3.22.0",
    "fast-glob": "^3.3.2",
    "zod": "^3.22.4",
    "diff": "^5.1.0"
  },
  "devDependencies": {
    "@types/diff": "^5.0.9"
  }
}
