    "react-dom": "^18.2.0",
    "ink": "^4.4.1",
    "zustand": "^4.5.0",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@types/react": "^18.2.48",
    "@types/react-dom": "^18.2.18",
    "@testing-library/react": "^14.1.2",
    "ink-testing-library": "^3.0.0"
  }
}
