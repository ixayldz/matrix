    "clean": "rm -rf dist"
  },
  "dependencies": {
    "keytar": "^7.9.0",
    "libsodium-wrappers": "^0.7.13",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@types/keytar": "^4.4.2",
    "@types/libsodium-wrappers": "^0.7.13"
  }
